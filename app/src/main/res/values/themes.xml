<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Influencer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azul_bar</item>
        <!-- Customize your theme here. -->
    </style>
    //para el splash
    <style name="Theme.App.ElSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/naranja_intermedio</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/elsplash_sinfondo_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Influencer</item>
    </style>

</resources>